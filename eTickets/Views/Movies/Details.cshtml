@model Movie

@{
    ViewData["Title"] = "Movie Details";
    var Today = DateOnly.FromDateTime(DateTime.Now);
}

<div class="row">
    <div class="col-md-8 offset-3">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Name
                            </h5>
                        </p>
                    </div>
                </div>

                <div class="col-md-6">
                    <img src="~/@Model.ImageUrl" alt="@Model.Name" style="width:100%">
                </div>

                <div class="col-md-6">
                    <div class="card-body" style="min-height:320px">
                        <p class="card-text">@Model.Description</p>

                        <p class="card-text">
                            <b>Cinema: </b>
                            <a asp-controller="Cinemas" asp-action="Details" asp-route-id="@Model.CinemaId" class="text-decoration-none">@Model.Cinema.Name</a>
                        </p>

                        <p class="card-text">
                            <b>Director: </b>
                            <a asp-controller="Directors" asp-action="Details" asp-route-id="@Model.DirectorId" class="text-decoration-none">@Model.Director.FullName</a>
                        </p>

                        <p class="card-text"><b>Category: </b>@Model.MovieCategory</p>

                        <p class="card-text"><b>Start Date: </b>@Model.StartDate.ToString("dd MMM yy")</p>

                        <p class="card-text"><b>End Date: </b>@Model.EndDate.ToString("dd MMM yy")</p>

                        <p class="card-text ">
                            <b>Status: </b>
                            @if (Today >= Model.StartDate && Today <= Model.EndDate)
                            {
                                <span class="badge bg-success text-white">AVAILABLE</span>
                            }
                            else if (Today > Model.EndDate)
                            {
                                <span class="badge bg-danger text-white">EXPIRED</span>
                            }
                            else
                            {
                                <span class="badge bg-primary text-white">UPCOMING</span>
                            }
                        </p>
                    <p class="text">
                        <b>Actors</b>
                        <hr />
                        <div class="row">
                            @foreach (var am in Model.ActorsMovies)
                            {
                                <div class="col text-center">
                                    <img src="~/@am.Actor.ProfilePictureUrl" alt="@am.Actor.FullName" class="border-info rounded-circle" style="max-width:100px" /><br />
                                    <a asp-controller="Actors" asp-action="Details" asp-route-id="@am.ActorId" class="text-decoration-none">@am.Actor.FullName</a>
                                </div>
                            }
                        </div>
                    </p>
                    </div>

                </div>

                <div class="col-md-12" style="max-height:50px">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-success text-white @((Today > Model.EndDate) ? "disabled" : "")"
                               asp-controller="Orders"
                               asp-action="AddItemToShoppingCart"
                               asp-route-id="@Model.Id">
                                <i class="bi bi-cart-plus"></i> Add to Cart (@Model.Price.ToString("c"))
                            </a>
                            <a class="btn btn-outline-primary float-end" asp-action="Index">Back to list</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>