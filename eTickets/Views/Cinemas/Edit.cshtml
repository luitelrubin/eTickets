@model Cinema

@{
    ViewData["Title"] = "Edit Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img src="~/@Model.LogoUrl" id="LogoUrl" class="border-info rounded-circle" style="max-height: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" type="hidden" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LogoUrl" class="control-label"></label>
                        <input asp-for="LogoUrl" class="form-control" />
                        <span asp-validation-for="LogoUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#LogoUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = ~/@Model.LogoUrl;
        })
    </script>
}