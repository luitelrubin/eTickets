@* Define Model *@
@model IEnumerable<Actor>

@* Define View Data *@
@{
    ViewData["Title"] = "Actors";
}

@* Write Code *@
<div class="row">
    <div class="col-md-10 offset-md-1">
        <table class="table">
            <thead>
                <tr class="text-left">
                    <th>@Html.DisplayNameFor(m => m.ProfilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Bio)</th>
                    @if(User.Identity.IsAuthenticated&&User.IsInRole("Admin"))
                    {<th>Actions</th>}
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img class="rounded-circle" src="@item.ProfilePictureUrl" alt="Actor photo"
                                style="width:150px;height:150px;object-fit:cover;object-position:center top;" /></td>
                        <td>@Html.DisplayFor(modelitem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelitem => item.Bio)</td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td>
                                <a class="btn btn-outline-info" asp-action="Details"
                                asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
                                | <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                                | <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Actors");